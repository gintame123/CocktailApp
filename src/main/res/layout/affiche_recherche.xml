<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.25" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <TextView
            android:id="@+id/cocktailNameView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="63dp"
            android:clickable="false"
            android:fontFamily="@font/abril_fatface"
            android:text="title"
            android:textAlignment="center"
            android:textColor="#448AFF"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/alcoholicOrNotView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="63dp"
            android:fontFamily="@font/bad_script"
            android:text="Alcoholic"
            android:textColor="#448AFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/cokctailImageView"
            android:layout_width="148dp"
            android:layout_height="177dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="100dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cocktailNameView" />

        <TextView
            android:id="@+id/ingredientView1"
            android:layout_width="105dp"
            android:layout_height="180dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/cabin_medium"
            android:text="ingredient"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FB531D"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toEndOf="@+id/cokctailImageView"
            app:layout_constraintTop_toBottomOf="@+id/cocktailNameView" />

        <TextView
            android:id="@+id/mesureView"
            android:layout_width="101dp"
            android:layout_height="180dp"
            android:layout_marginTop="69dp"
            android:fontFamily="@font/cabin_medium"
            android:text="mesure"
            android:textAlignment="center"
            android:textColor="#FB531D"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toBottomOf="@+id/alcoholicOrNotView" />

        <TextView
            android:id="@+id/categorieDrinkView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="95dp"
            android:fontFamily="@font/droid_serif_bold_italic"
            android:text="categorie"
            android:textColor="#9FFA0B5C"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cokctailImageView" />

        <TextView
            android:id="@+id/instructionView"
            android:layout_width="293dp"
            android:layout_height="135dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/cabin_medium"
            android:scrollbars="vertical"
            android:text="instructions"
            android:textAlignment="inherit"
            android:textColor="#01B0FF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categorieDrinkView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>